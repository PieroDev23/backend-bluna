{
  "compilerOptions": {
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "@auth/*": [
        "src/modules/auth/*"
      ],
      "@products/*": [
        "src/modules/products/*"
      ],
      "@shared/*": [
        "src/modules/shared/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true
  }
}